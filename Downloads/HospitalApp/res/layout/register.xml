<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">
    
 <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip" >
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:scaleType="fitXY"
            android:src="@drawable/cardioalter" />

    </LinearLayout>   
	<LinearLayout
         android:id="@+id/footer"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:paddingBottom="5dip"
         android:paddingTop="5dip">
        
    </LinearLayout>
 
 <AbsoluteLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_below="@+id/header"
     android:padding="10dip" >

     <TextView
         android:id="@+id/textView3"
         android:layout_width="71dp"
         android:layout_height="0dp"
         android:text="TextView" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="109dp"
         android:layout_height="50dp"
         android:layout_x="10dp"
         android:layout_y="0dp"
         android:gravity="left"
         android:text="Username:"
         android:textColor="#8D0000"
         android:textSize="20dp" />

     <EditText
         android:id="@+id/Usernm"
         android:layout_width="155dp"
         android:layout_height="wrap_content"
         android:layout_x="147dp"
         android:layout_y="0dp"
         android:hint="UserName"
         android:inputType="textPersonName" />



     <EditText
         android:id="@+id/pwd"
         android:layout_width="155dp"
         android:layout_height="wrap_content"
         android:layout_x="147dp"
         android:layout_y="57dp"
         android:hint="Password"
         android:inputType="textPassword" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="106dp"
         android:layout_height="44dp"
         android:layout_x="10dp"
         android:layout_y="60dp"
         android:text="Password:"
         android:textColor="#8D0000"
         android:textSize="20dp" />

     <TextView
         android:id="@+id/CPwd"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="2dp"
         android:layout_y="120dp"
         android:text="Confirm Pwd:"
         android:textColor="#8D0000"
         android:textSize="20dp" />



     <EditText
         android:id="@+id/pwd2"
         android:layout_width="155dp"
         android:layout_height="wrap_content"
         android:layout_x="147dp"
         android:layout_y="115dp"
         android:hint="Password"
         android:inputType="textPassword" >
     </EditText>

     <TextView
         android:id="@+id/design"
         android:layout_width="122dp"
         android:layout_height="39dp"
         android:layout_x="10dp"
         android:layout_y="180dp"
         android:text="Designation:"
         android:textColor="#8D0000"
         android:textSize="20dp" />

     <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_x="10dp"
         android:layout_y="230dp"
         android:text="Experience:"
         android:textColor="#8D0000"
         android:textSize="20dp" />

     <Spinner
         android:id="@+id/spinner2"
         android:layout_width="157dp"
         android:layout_height="wrap_content"
         android:layout_x="149dp"
         android:layout_y="230dp" />


     <Spinner
         android:id="@+id/spinner1"
         android:layout_width="157dp"
         android:layout_height="wrap_content"
         android:layout_x="147dp"
         android:layout_y="172dp" />

     <Button
         android:id="@+id/register"
         android:layout_width="110dp"
         android:layout_height="90dp"
         android:layout_x="187dp"
         android:layout_y="325dp"
         android:background="@drawable/buttonred"
         android:text="Register" />

     <Button
         android:id="@+id/reset"
         android:layout_width="110dp"
         android:layout_height="90dp"
         android:layout_x="25dp"
         android:layout_y="325dp"
         android:background="@drawable/buttonred"
         android:text="Reset" />

     <ImageView
         android:layout_width="321dp"
         android:layout_height="125dp"
         android:layout_x="-48dp"
         android:layout_y="468dp"
         android:src="@drawable/repeat_bg" />
     
 </AbsoluteLayout>
</RelativeLayout>
</ScrollView>